@model Nutrimeal.ViewModels.EditMetaExercicioViewModel
@{
    ViewData["Title"] = Model.PageName;
}

<h2>Editar</h2>

<div class="form-group">
    <form asp-action="Edit" asp-controller="MetaExercicio">
        <div>
            <input type="hidden" asp-for="@Model.MetaExercicioOnList.MetaExercicioId" />
            <label asp-for="@Model.MetaExercicioOnList.Calorias"></label>
            <div>
                <input asp-for="@Model.MetaExercicioOnList.Calorias" />
                <span asp-validation-for="@Model.MetaExercicioOnList.Calorias" class="text-danger"></span>
            </div>
        </div>
        
        <br />
        <button type="submit" class="btn btn-info">Save</button>
    </form>
</div>

