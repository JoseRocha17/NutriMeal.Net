@model Nutrimeal.ViewModels.EditAtributoViewModel
@{
    ViewData["Title"] = Model.PageName;
}

<h2>Editar</h2>

<div class="form-group">
    <form asp-action="Edit" asp-controller="Atributo">
        <div>
            <input type="hidden" asp-for="@Model.AtributoToEdit.AtributoId" />
            <label asp-for="@Model.AtributoToEdit.Nome"></label>
            <div>
                <input asp-for="@Model.AtributoToEdit.Nome" />
                <span asp-validation-for="@Model.AtributoToEdit.Nome" class="text-danger"></span>
            </div>
        </div>      
        <br />
        <button type="submit" class="btn btn-info">Save</button>
    </form>
</div>

