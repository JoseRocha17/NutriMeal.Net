@model Nutrimeal.ViewModels.DetailsPerfilAlimentarViewModel
@{
    ViewData["Title"] = Model.PageName;
}

<script src="~/js/Calculos/calcularCaloriasRefeicao.js"></script>

<div class="form-group">
    <form asp-action="EditRefeicaoTotalCalorias" asp-controller="PerfilAlimentar">
        <div>
            <input type="hidden" asp-for="@Model.RefeicaoToUpdate.RefeicaoId" />

            <input id="teste" asp-for="@Model.RefeicaoToUpdate.TotalCalorias" value="@Model.CaloriasRefeicao" />
        </div>
        <br />
        <button type="submit" class="btn btn-info">Save</button>

        <a onclick="calcularCaloraisRefeicao(document.getElementById('alimentosRefeicaoTableId'))"> ver calorias</a>
    </form>
</div>