@model Nutrimeal.ViewModels.MedidasListViewModel
@{
    ViewData["Title"] = Model.PageName;
}

<h2>Medidas</h2>

<table id='Candidate_table' class='table table-bordered table-hover'>
    <thead>
        <tr>
            <th>Altura</th>
            <th>Peso</th>
            <th>Pescoco</th>
            <th>Cintura</th>
            <th>Quadris</th>
            <th>Data</th>


        </tr>
    </thead>



    @if (@Model.Items.Count != 0)
    {
        foreach (var item in Model.Items)
        {
            <tr>
                <td> @item.Altura</td>
                <td> @item.Peso </td>
                <td> @item.Pescoco </td>
                <td> @item.Cintura </td>
                <td> @item.Quadris </td>
                <td> @item.DataMedicao.ToString("dd/MM/yyyy") </td>
                <td>

                    <a asp-controller="Medidas"
                       asp-action="Details"
                       asp-route-id="@item.MedidaId"
                       class="badge badge-default badge-pill pull-right">
                        Detalhes
                    </a>

                    <a asp-controller="Medidas"
                       asp-action="Edit"
                       asp-route-id="@item.MedidaId"
                       class="badge badge-default badge-pill pull-right">
                        Editar
                    </a>

                    <a asp-controller="Medidas"
                       asp-action="Delete"
                       asp-route-id="@item.MedidaId"
                       class="badge badge-default badge-pill pull-right">
                        Delete
                    </a>



                </td>

            </tr>
            <tr>
                <td>

                </td>
            </tr>
        }

    }
    else
    {
        <tr> Ainda não foi submetido qualquer objetivo </tr>
    }
</table>

<div id="New_Candidate">
    <a asp-area="" asp-action="New" class="btn btn-success">Novo</a>
</div>


