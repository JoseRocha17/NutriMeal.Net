@model Nutrimeal.ViewModels.EditRefeicaoViewModel
@{
    ViewData["Title"] = Model.PageName;
}

<h2>Editar</h2>

<div class="form-group">
    <form asp-action="Edit" asp-controller="Refeicao">
        <div>
            <input type="hidden" asp-for="@Model.RefeicaoToUpdate.RefeicaoId" />
            <label asp-for="@Model.RefeicaoToUpdate.Nome"></label>
            <div>
                <input asp-for="@Model.RefeicaoToUpdate.Nome" />
                <span asp-validation-for="@Model.RefeicaoToUpdate.Nome" class="text-danger"></span>
            </div>
        </div>      
        <br />
        <button type="submit" class="btn btn-info">Save</button>
    </form>
</div>

