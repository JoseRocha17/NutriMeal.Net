@model Nutrimeal.ViewModels.NewRefeicaoViewModel
@{
    ViewData["Title"] = Model.PageName;
}

<h2>Novo</h2>

<div class="form-group">
    <form asp-action="New" asp-controller="Refeicao">
        <div>
            <label asp-for="@Model.RefeicaoInput.Nome"></label>
            <div>
                <input asp-for="@Model.RefeicaoInput.Nome" />
                <span asp-validation-for="@Model.RefeicaoInput.Nome" class="text-danger"></span>
            </div>
        </div>
        <hr />
        <button type="submit" class="btn btn-info">Criar</button>

    </form>
</div>