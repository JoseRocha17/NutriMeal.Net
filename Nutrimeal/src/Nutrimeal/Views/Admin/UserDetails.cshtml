using Microsoft.AspNetCore.Identity;
@model Nutrimeal.ViewModels.AdminListViewModel
@inject UserManager<ApplicationUser> userManager

<div>
    <h1>Detalhes</h1>
</div>

<table class='table table-bordered table-hover'>
    <thead>
        <tr>
            <th>Email</th>
            <th>Telemovel</th>
            <th>Roles</th>
        </tr>

    </thead>
    <tbody>
        @foreach (var user in Model.Users)
        {
            <tr>
                <td>@user.Email</td>
                <td>@user.PhoneNumber</td>
                <td>@(string.Join(",", await userManager.GetRolesAsync(user)))</td>
            </tr>

            <tr>
                <td>
                    <a asp-controller="UserManagement" asp-action="AddRole" asp-route-id="@user.Id" class="btn btn-primary">Add Role</a>
                    <a asp-controller="PerfilAlimentar" asp-action="NewPerfilAlimentarAdmin" asp-route-id="@user.Id" class="btn btn-primary">Criar Perfil Alimentar</a>
                    <a asp-controller="PerfilFisico" asp-action="NewPerfilFisicoAdmin" asp-route-id="@user.Id"class="btn btn-primary">Criar Perfil Físico</a>
                </td>
            </tr>

        }
    </tbody>


</table>