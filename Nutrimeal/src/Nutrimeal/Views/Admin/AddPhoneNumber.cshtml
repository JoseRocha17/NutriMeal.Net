@model Nutrimeal.ViewModels.UserManagementAddPhoneNumberViewModel

@*<h3> Add Role for: @Model.Email</h3>*@
<div asp-validation-summary="All">
    <form asp-controller="Admin" asp-action="AddPhoneNumber">
        <input asp-for="UserId" type="hidden" />
        <div>
            <label asp-for="@Model.PhoneNumber"></label>
            <div>
                <input asp-for="@Model.PhoneNumber" />
                <span asp-validation-for="@Model.PhoneNumber" class="text-danger"></span>
            </div>
        </div>
        <input type="submit" value="Add PhoneNumber" />


    </form>
</div>