@model Nutrimeal.ViewModels.QuantidadeAlimentarListViewModel
@{
    ViewData["Title"] = Model.PageName;
}

<h2>Quantidades Alimentares</h2>

<table id='Candidate_table' class='table table-bordered table-hover'>
    <thead>
        <tr>
            <th>Refeiçao</th>
            <th>Alimento</th>
            <th>Quantidade</th>
        </tr>
    </thead>



    @if (@Model.Items.Count != 0)
    {
        foreach (var item in Model.Items)
        {
            <tr>
                <td> @Model.RefeicaoNome </td>
                <td> @item.AlimentoNome </td>
                <td> @item.Quantidade @item.TipoMedida</td>
                <td>

                    <a asp-controller="QuantidadeAlimentar"
                       asp-action="Details"
                       asp-route-id="@item.QuantidadeAlimentarId"
                       class="badge badge-default badge-pill pull-right">
                        Detalhes
                    </a>

                    <a asp-controller="QuantidadeAlimentar"
                       asp-action="Edit"
                       asp-route-id="@item.QuantidadeAlimentarId"
                       class="badge badge-default badge-pill pull-right">
                        Editar
                    </a>

                    <a asp-controller="QuantidadeAlimentar"
                       asp-action="Delete"
                       asp-route-id="@item.QuantidadeAlimentarId"
                       class="badge badge-default badge-pill pull-right">
                        Delete
                    </a>

                </td>

            </tr>
        }

    }
    else
    {
        <tr> Ainda não foi submetido qualquer objetivo </tr>
    }
</table>

<div id="New_Candidate">
    <a asp-area="" asp-action="New" class="btn btn-success">Novo</a>
</div>


