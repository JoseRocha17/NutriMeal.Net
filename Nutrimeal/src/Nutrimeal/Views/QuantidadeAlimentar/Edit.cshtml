@model Nutrimeal.ViewModels.EditQuantidadeAlimentarViewModel
@{
    ViewData["Title"] = Model.PageName;
}

<h2>Editar</h2>

<div class="form-group">
    <form asp-action="Edit" asp-controller="QuantidadeAlimentar">
        <div>
            <input type="hidden" asp-for="@Model.QuantidadeAlimentarToUpdate.QuantidadeAlimentarId" />
            <label asp-for="@Model.QuantidadeAlimentarToUpdate.Quantidade"></label>
            <div>
                <input asp-for="@Model.QuantidadeAlimentarToUpdate.Quantidade" />
                <span asp-validation-for="@Model.QuantidadeAlimentarToUpdate.Quantidade" class="text-danger"></span>
            </div>
        </div>
        <div>
            <label asp-for="@Model.QuantidadeAlimentarToUpdate.AlimentoId"></label>
            <div>
                <input asp-for="@Model.QuantidadeAlimentarToUpdate.AlimentoId" />
                <span asp-validation-for="@Model.QuantidadeAlimentarToUpdate.AlimentoId" class="text-danger"></span>
            </div>
        </div>      
        <br />
        <button type="submit" class="btn btn-info">Save</button>
    </form>
</div>

